.courseDetails {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: white;
  padding: 0 32rpx;
}

.courseDetailsH {
  display: flex;
  flex-direction: row;
  height: 117rpx;
}

.courseDetailsH>view {
  height: 100%;
  padding: 28rpx 0 20rpx 0;
  box-sizing: border-box;
}

.courseDetailsH>view:nth-child(1) {
  margin-right: 18rpx;
}

.courseDetailsH image {
  width: 70rpx;
  height: 70rpx;
}
.courseDetailsH>view:nth-child(2) view{
      height: 28rpx;
      line-height: 28rpx;
}
.courseDetailsH>view:nth-child(2) view:nth-child(1){
    margin-bottom: 18rpx;
}
.courseDetailsH text {
  font-size: 28rpx;
}
