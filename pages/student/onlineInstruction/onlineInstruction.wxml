
<!--pages/student/onlineInstruction/onlineInstruction.wxml-->
<import src="../../template/prompt/prompt"/>
<view class="head">
  学生:
  <text>王子魏</text>
  <navigator>
    <image src="/images/icon/video.png"></image>
    <text>视频列表</text>
  </navigator>
</view>
<view class="contect">
  <view class="section">
    <image src="/images/icon/star.png" class="star"></image>
    <text>视频标题</text>
    <input placeholder="输入视频标题" />
  </view>
  <view class="section">
    <image src="/images/icon/star.png" class="star"></image>
    <text>上传视频</text>
    <button bindtap="chooseImg">选择图片并上传</button>
  </view>
  <view class="section">
    <image src="/images/icon/star.png" style="opacity: 0;" class="star"></image>
    <text>视频简介</text>
    <input placeholder="输入详细描述" />
  </view>
</view>
<template is="prompt" data="{{prompt}}"></template>
<view class="button">
  <button formType="submit" catchtap="submit">确认提交</button>
</view>

