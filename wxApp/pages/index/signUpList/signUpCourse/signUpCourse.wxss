page{
  background-color: #f5f5f5;
}
.tabBar{
  display: flex;
  flex-direction: row;
  background-color: white;
  border-bottom: 1rpx solid #e6e6e6;
}
.manu{
  position: relative;
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.active{
  color: #3eb3ff;
}
.line{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.active .line{
  height: 4rpx;
  background-color: #3eb3ff;
}
.section{
  color: #b6b6b6;
  background-color: #ebebeb;
  margin: 40rpx 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 5px;
}
.sectionTitle{
  display: inline-block;
  width: 230rpx;
  text-align: center;
}


