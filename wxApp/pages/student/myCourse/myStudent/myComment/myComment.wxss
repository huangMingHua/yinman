/* pages/student/myCourse/myStudent/myComment/myComment.wxss */
.head{
  display: flex;
  flex-direction: row;
  margin:  36rpx 0 20rpx 0;
}
.wrap{
  padding-bottom: 100rpx;
}
.head-img{
  width: 70rpx;
  height: 70rpx;
  margin:0 16rpx 0 32rpx;
}
.head-img image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%; 
}
 .head-teacher{
  color: #8a8a8a;
  font-size: 24rpx;
}
 .head-cul{
  color: #040000;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.cul-info{
  margin:20rpx 32rpx 36rpx 32rpx;
  background-color: #f5f5f5;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.cul-info .cul-info-a{
  margin: 20rpx 0;
}
.cul-info .cul-info-a text:nth-child(1){
  display: inline-block;
  width: 140rpx;
  text-align: right;
}
.title{
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  height: 86rpx;
  line-height: 86rpx;
  padding-left: 30rpx;       
}
.write{
  position: fixed;
  bottom: 0;
  background-color: #f5f5f5;
  display: flex;
  width: 100%;
  height: 110rpx;
}
.write .write-wrap{
  background-color: white;
  display: flex;
  height: 80rpx;
  vertical-align: middle;
  line-height: 80rpx;
  margin: 16rpx 0 0 32rpx;
}
.write .write-wrap image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 20rpx 20rpx 0 16rpx;
}
.write .write-wrap input{
  width: 530rpx;
  height: 100%;
}
.write button{
  background-color: rgba(0,0, 0, 0);
  padding: 0;
  color: #3cb4ff;
  line-height: 110rpx;
}
.write button::after{
  border: none;
}
.date{
  font-size: 24rpx;
  color: #8a8a8a;
}
