/* pages/student/myCourse/myStudent/currentStudents/currentStudents.wxss */
.myCourseHead{
     display: flex;
    flex-direction: row;
    background-color: white;
}
.myCourseHead view {
    height: 98rpx;
    box-sizing: border-box;
    width: 50%;
    text-align: center;
    line-height: 98rpx;
    font-size: 32rpx;
    color: #333333;
}
.myCourseHead .active{
    border-bottom:4rpx solid #3cb4ff;
    color: #3cb4ff;
}
.courseDetails {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: white;
  padding: 0 32rpx;
}

.courseDetailsH {
  display: flex;
  flex-direction: row;
  height: 117rpx;
}

.courseDetailsH>view {
  height: 100%;
  padding: 28rpx 0 20rpx 0;
  box-sizing: border-box;
}

.courseDetailsH>view:nth-child(1) {
  margin-right: 18rpx;
}

.courseDetailsH image {
  width: 70rpx;
  height: 70rpx;
}
.courseDetailsH>view:nth-child(2) view{
      height: 28rpx;
      line-height: 28rpx;
}
.courseDetailsH>view:nth-child(2) view:nth-child(1){
    margin-bottom: 18rpx;
}
.courseDetailsH text {
  font-size: 28rpx;
}
.courseDetailsH .classInfo{
  color: #979797;
}
.timeInfo{
  padding: 6rpx 30rpx 28rpx 30rpx;
   background-color: #f5f5f5;
}
.timeInfo view{
  margin-top: 22rpx;
  font-size: 28rpx;
}
.timeInfo view:nth-child(2) text{
    display: block;
    text-indent: 2em;
}
.btn-area{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 18rpx 0 30rpx 0;
  font-size: 28rpx;
}
.btn-area navigator{
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
  text-align: center;
  color: white;
}
.btn-area navigator:nth-child(1){
  background-color: #00d6c2;
  margin-left: 220rpx;
}
.btn-area navigator:nth-child(2){
  background-color: #ff9b39;
}