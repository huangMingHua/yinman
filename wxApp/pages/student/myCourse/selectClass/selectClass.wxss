/* pages/student/myCourse/selectClass/selectClass.wxss */
.term{
  height: 84rpx;
  line-height: 84rpx;
  border-top: 1rpx solid #e5e7e6;
  border-bottom: 1rpx solid #e5e7e6;
}
.term image{
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
  margin: 0 14rpx 0 32rpx
}
.term text{
  font-size: 32rpx;
  vertical-align: middle;
}
.term text:nth-of-type(1){
  margin-right: 20rpx;
}
.term text:nth-of-type(2){
  color: #979797;
}
.courseDetail{
  padding: 35rpx 0;
  display: flex;
  align-items: center;
  line-height: 60rpx;
  font-size: 32rpx;
}
.courseDetail image{
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx 0 32rpx;
  border-radius: 100%;
}
.courseDetail .class{
  font-size: 28rpx;
  color: #979797;
}
.courseDetail .class text{
  margin-right: 10rpx;
}
.line{
  height: 22rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6; 
}
.switchWeek{
  display: flex;
  align-items: center;
  height: 110rpx;
  justify-content: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.switchWeek text{
  vertical-align: middle;
}
.switchWeek .weekDate{
  width: 430rpx;
  height: 72rpx;
  font-size: 32rpx;
  background-color: #3cb4ff;
  color: white;
  border-radius: 24rpx;
  text-align: center;
  line-height: 72rpx;
  margin: 0 20rpx;
}
.switchWeek .weekDate text:nth-child(1){
  margin-right: 12rpx;
}
.switchWeek image{
  width: 18rpx;
  height: 30rpx;
  margin: 0 10rpx;
  vertical-align: middle;
}
.classTable{
  font-size: 28rpx;
}
.classTable .row{
  display: flex;
}
.classTable .row>view{
  min-height: 62rpx;
  border-right: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
}
.classTable .row>view:nth-child(1){
  display: flex;
  align-items: center;
  justify-content: center;
  width: 142rpx;
}
.classTable .row>view:nth-child(2){
  width: 306rpx;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.classTable .row>view:nth-child(3){
  flex: 1;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.classTable .row .weekCon{
  position: relative;
  display: flex;
  align-items: center;
  min-height: 60rpx;
  justify-content: center;
  margin: 6rpx 6rpx 0 6rpx;
  background-color: #edf6fe;
}
.classTable .row .weekCon1{
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  min-height: 60rpx;
  justify-content: center;
  margin: 6rpx 6rpx 0 6rpx;
  background-color: #edf6fe;
  border: 1rpx solid #3cb4ff;
}
.classTable .row  image{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 24rpx;
  height: 24rpx;
}
.submit{
  background-color: #f5f5f5;
  padding: 50rpx;
}
.submit button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 282rpx;
  height: 96rpx;
  font-size: 32rpx;
  color: white;
  background-color: #3cb4ff;
}
.weekTh{
  display: flex;
  align-items: center;
  justify-content: center;
}
.gray{
  color:#a7a7a7;
}
.blue{
  color:#3cb4ff;
}