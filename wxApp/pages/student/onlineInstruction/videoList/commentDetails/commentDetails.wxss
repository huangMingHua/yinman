/* pages/student/onlineInstruction/videoList/commentDetails/commentDetails.wxss */

page {
  background-color: #f5f5f5;
}

.video video {
  width: 100%;
  height: 420rpx;
}

.videoInfo {
  border-bottom: 1rpx solid #f1f1f1;
  padding: 17rpx 32rpx 19rpx 32rpx;
  background-color: white;
}

.videoInfo>view {
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #333;
}

.videoInfo>view:nth-of-type(2) text:nth-child(2) {
  float: right;
  color: #8a8a8a;
  font-size: 24rpx;
}

.videoSynopsis {
  border-bottom: 1rpx solid #e6e6e6;
  padding: 16rpx 32rpx 23rpx 32rpx;
  margin-bottom: 20rpx;
  background-color: white;
  line-height: 48rpx;
  font-size: 28rpx;
}

.videoSynopsis view:nth-child(2) {
  color: #979797;
}

.teacher {
  background-color: white;
}

.teacher>view:nth-child(1) {
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 1rpx solid #f1f1f1;
  padding: 0 32rpx;
}

.teacher>view:nth-child(1) text:nth-child(1) {
  color: #333;
  font-size: 28rpx;
}

.teacher>view:nth-child(1) text:nth-child(2) {
  float: right;
  color: #8a8a8a;
  font-size: 24rpx;
}

.teacher>view:nth-child(2) {
  padding: 22rpx 32rpx;
  line-height: 46rpx;
  font-size: 28rpx;
}

.teacher>view:nth-child(2) view:nth-child(1) {
  color: #333;
}

.teacher>view:nth-child(2) view:nth-child(2) {
  color: #979797;
}
.textarea{
  background-color: white;
  padding: 30rpx;
}
.textarea textarea{
   width: 630rpx;
   padding: 30rpx;
   height: 200rpx !important;
   background-color: #ebebeb;
}
.button{
  position: relative;
  width: 100%;
  height: 215rpx;
}
.button button {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 276rpx;
  height: 90rpx;
  background-color: #3cb4ff;
  border: none;
  color: white;
}