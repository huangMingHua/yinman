/* pages/student/student.wxss */
page{
  padding-bottom: 100rpx;
}
@import "../homeComponent/head/head.wxss";
@import "../homeComponent/stuAndTecCourse/stuAndTecCourse.wxss";
@import "../homeComponent/classAndEnroll/classAndenroll.wxss";
@import "../homeComponent/tel/tel.wxss";
@import "../home/about/about.wxss";
.headWrap{
    border-bottom:1rpx solid #e6e6e6; 
}
.stuAndTecCourseWrap{
 
}
.classEnroll{
}
.table{
  background-color: white;
  padding: 5rpx 0;
}
.table-item{
    display: flex;
    padding-top: 18rpx;
    border-bottom: 4rpx solid #3cb4ff;
    width: 100%;
    height: 72rpx;
    background-color: #f5f5f5;
}
.table-item view{
  width: 160rpx;
  height:70rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 70rpx;
  margin-right: 10rpx;
}
.table-item .active{
   background-color: white;
   font-size:34rpx; 
   color:#20a0ff;
   border-radius: 8rpx;
   border-top: 4rpx solid #3cb4ff;
   border-left: 4rpx solid #3cb4ff;
   border-right: 4rpx solid #3cb4ff;
   border-bottom: 4rpx solid white;
}
.addStudent{
  position: absolute;
  right: 32rpx;
  top: 64rpx;
  border: 2rpx solid #14a2d4;
  border-radius: 16rpx;
  width: 170rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  color: #14a2d4;
  font-size: 32rpx;
}
.editStudent{
  margin:20rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  font-size: 34rpx;
  color: #14a2d4;
}
.fixed{
  position: fixed;
  z-index: 100;
  left: 0;
  bottom: 0;
  display: flex; 
  width: 100%;
  text-align: center;
  background-color: white;
  font-size: 28rpx;
}
.fixed navigator{
  width: 50%;
  height: 70rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
}
.fixed .active{
  background-color: #eeeeee;
}
.fixed navigator image{
  display: block;
  width: 40rpx;
  margin: 0 auto;
  height: 40rpx;
  margin-bottom: 6rpx;
}
