/* pages/student/signUpTeacher/signUpTeacher.wxss */
@import "../../template/wxparse/wxparse.wxss";
page{
  background-color: white;
}
.header{
  margin: 40rpx 32rpx;
  font-size: 32rpx;
}
.header .headPortrait{
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  vertical-align: middle;
}
.header .title{
  margin: 0 20rpx;
}
.personalIntroduction{
  font-size: 28rpx;
  color: #979797;
  margin: 0 30rpx;
  padding: 20rpx 36rpx;
  background-color: #f5f5f5;
  line-height: 46rpx;
}
.termDetail{
  display: flex;
  margin-top: 35rpx;
  background-color: #f5f5f5;
  line-height: 42rpx;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}
.termDetail image{
  width: 40rpx;
  height: 40rpx;
  margin: 28rpx 13rpx 22rpx 30rpx;
  vertical-align: middle;
}
.typeWrap{
  vertical-align: middle;
}
.termDetailTitle{
  margin: 28rpx 0 22rpx 0;
  font-size: 32rpx;
  color: #040000;
  vertical-align: middle;
}
.termName{
  margin-left:10rpx;
  font-size: 28rpx;
  color: #979797;
}
.termCrycle{
  font-size: 28rpx;
  color: #979797;
}
.course{
  padding: 35rpx 32rpx 0 36rpx;
  display: flex;
}
.course .type{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-top: 7rpx;
}
.courseDetail{
  vertical-align: middle;
  font-size: 28rpx;
  width: 524rpx;
  padding-left: 20rpx;
}
.wxparseWrap{
  margin-top: 20rpx;
  padding: 0 32rpx;
}
.wxparseTitle{
 
}

.wxparseTitle image{
  width: 22rpx;
  height: 28rpx;
  margin-right: 14rpx;
}
.wxparseTitle text{
  font-size: 32rpx;
}
.wxparse{
  padding-left: 34rpx;
  color: #aaaaaa;
  font-size: 28rpx;
}
.course navigator{
  width: 112rpx;
  height: 60rpx;
  background-color: #3cb4ff;
  border-radius: 4px;
  text-align: center;
  line-height: 60rpx;
  color: white;
  font-size: 28rpx;
}
.line{
  margin-top:35rpx;
  background-color:#f5f5f5;
  height:30rpx;
  border-top:1rpx solid #e6e6e6;
  border-bottom:1rpx solid #e6e6e6;
}