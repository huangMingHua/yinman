/* pages/teacher/timeTag/timeTag.wxss */
.title{ 
  height: 84rpx;
  line-height: 84rpx;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  font-size: 32rpx;
  color: #040000;
}
.title image{
  margin: 0 14rpx 0 30rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.list{
  position: relative;
}
.list .line{
  position: absolute;
  left: 48rpx;
  width: 4rpx;
  height: 100%;
  background-color: #f5f5f5;
}
.list .index{
  position: absolute;
  left: 36rpx;
  top: 35rpx;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  background-color: #00d6c2;
  text-align: center;
  font-size: 20rpx;
  color: white;
  border-radius: 100%;
}
.list .detail{
  margin-left: 82rpx;
  padding: 19rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.list .detail>view{
  line-height: 48rpx;
  font-size: 28rpx;
}
.list .detail .people{
  display: flex;
}
.list .detail .people>view:nth-child(1){
  width: 86rpx;
}
.list .detail .people>view:nth-child(2){
  width: 558rpx;
  color: #979797;
  word-wrap: break-word;
}