/* pages/teacher/teacherCourse/teacherCourse.wxss */
page{
    background-color: #f5f5f5;
}
.img{
  width: 30rpx;
  height: 13rpx;
  margin-left: 20rpx;
}
.semester{
  background-color: white;
  text-align: center;
  padding-top: 20rpx;
}
.semesterPicker{
  margin: 0 auto;
  width: 314rpx;
  height: 68rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 68rpx;
  border: 1rpx solid #3cb4ff;
  border-radius: 5px;
  color: #3cb4ff; 
}
.semesterStartEnd{
  padding: 18rpx 0 32rpx 0;
  font-size: 28rpx;
  color: #979797;
}
.semesterClassTitle,.classTimeClassTitle{
   display: flex;
   align-items: center;
   height: 84rpx;
   font-size: 24rpx;
   border-top: 1rpx solid #e6e6e6;
   border-bottom: 1rpx solid #e6e6e6;
}
.semesterClassTitle image,.classTimeClassTitle image{
  margin: 0 15rpx 0 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.teahcerDetail{
  position: relative;
  display: flex;
  margin-top: 19rpx;
  height: 144rpx;
  align-items: center;
  background-color: white;
  font-size: 32rpx;
  color: #040000;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}
.teahcerDetail image{
  margin: 0 20rpx 0 32rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
}
.teahcerDetail .teacherTitle{
  margin-right: 16rpx;
}
.teahcerDetail navigator{
  position: absolute;
  right: 32rpx;
  text-align: center;
  width: 222rpx;
  height: 64rpx;
  border-radius: 5px;
  line-height: 64rpx;
  background-color: #01d6c2;
  font-size: 28rpx;
  color: white;
}
.switchWeek{
  display: flex;
  align-items: center;
  height: 110rpx;
  justify-content: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.switchWeek text{
  vertical-align: middle;
}
.switchWeek .weekDate{
  width: 430rpx;
  height: 72rpx;
  font-size: 32rpx;
  background-color: #3cb4ff;
  color: white;
  border-radius: 24rpx;
  text-align: center;
  line-height: 72rpx;
  margin: 0 20rpx;
}
.switchWeek .weekDate text:nth-child(1){
  margin-right: 12rpx;
}
.switchWeek image{
  width: 18rpx;
  height: 30rpx;
  margin: 0 10rpx;
  vertical-align: middle;
}
.classTable{
  font-size: 28rpx;
}
.classTable .row{
  display: flex;
}
.classTable .row>view{
  min-height: 62rpx;
  border-right: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
}
.classTable .row>view:nth-child(1){
  display: flex;
  align-items: center;
  justify-content: center;
  width: 142rpx;
}
.classTable .row>view:nth-child(2){
  width: 202rpx;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.classTable .row>view:nth-child(3){
  width: 202rpx;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.classTable .row>view:nth-child(4){
  flex: 1;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.classTable .row .weekCon{
  position: relative;
  display: flex;
  align-items: center;
  min-height: 60rpx;
  justify-content: center;
  margin: 6rpx 6rpx 0 6rpx;
  background-color: #edf6fe;
}
.classTable .row .weekCon1{
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  min-height: 60rpx;
  justify-content: center;
  margin: 6rpx 6rpx 0 6rpx;
  background-color: #edf6fe;
  border: 1rpx solid #3cb4ff;
}
.classTable .row  image{
  position: absolute;
  top: 0;
  left: 17rpx;
  bottom: 0;
  margin: auto;
  width: 24rpx;
  height: 24rpx;
}
.submit{
  background-color: #f5f5f5;
  padding: 50rpx;
}
.submit button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 282rpx;
  height: 96rpx;
  font-size: 32rpx;
  color: white;
  background-color: #3cb4ff;
}
.weekTh{
  display: flex;
  align-items: center;
  justify-content: center;
}
.gray{
  color:#a7a7a7;
}
.blue{
  color:#3cb4ff;
}