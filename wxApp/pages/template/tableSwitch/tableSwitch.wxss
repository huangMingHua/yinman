.table{
  background-color: white;
  padding: 5rpx 0;
  margin-top: 20rpx;
}
.table-item{
    display: flex;
    border-bottom: 2rpx solid #ccc;
    width: 100%;
    height: 72rpx;
}
.table-item view{
  width: 160rpx;
  height:70rpx;
  text-align: center;
  line-height: 70rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
}
.table-item .active{
   color:#20a0ff;
   border-bottom: 4rpx solid #20a0ff;
}