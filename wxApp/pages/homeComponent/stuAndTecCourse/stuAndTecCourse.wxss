.stuAndTecCourse{
    display: flex;
    flex-direction: column; 
}
.course,.lesson,.instruction{
    height: 110rpx;
    line-height: 110rpx;
    background-color: #fcfcfc;
    border-bottom:1rpx solid  #e6e6e6;
    position: relative;
}
.course image,.lesson image,.instruction image{
    margin-left: 32rpx;
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    
}
.course text,.lesson text,.instruction text{
    margin-left: 22rpx;
    color: #333333;
    vertical-align: middle;
    font-size: 32rpx;
}
.course .dir,.lesson .dir,.instruction .dir{
    width: 12rpx;
    height: 27rpx;
    float: right;
    margin-right: 30rpx;
    margin-top: 41rpx;
}