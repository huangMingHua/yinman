/* pages/student/myCourse/applyRenewal/applyRenewal.wxss */

page {
  background-color: #f5f5f5;
}

.head {
  line-height: 106rpx;
  height: 106rpx;
  font-size: 32rpx;
  color: #040000;
  padding: 0 32rpx;
  background-color: white;
  border-bottom: 1rpx solid #e6e6e6;
}

.courseInfo {
  margin-top: 20rpx;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  background-color: white;
  padding: 14rpx 32rpx 32rpx 32rpx;
}

.courseInfo .courseInfoName {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #040000;
}

.section {
  position: relative;
  padding-left: 35rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 5px;
  background-color: #ebebeb;
}

.section label {
  display: inline-block;
  width: 190rpx;
}

.section>text {
  display: inline-block;
  font-size: 32rpx;
  vertical-align: middle;
  width: 190rpx;
  color: #b9b9b9;
}

.section label text {
  color: #333;
}

picker {
  display: inline-block;
  width: 440rpx;
}

.section .picker {
  display: inline-block;
  width: 100%;
}

.down {
  position: absolute;
  right: 36rpx;
  top: 28rpx;
  width: 40rpx;
  height: 24rpx;
}

.continuationTypeCon {
  margin: 20rpx 0 30rpx 0;
  background-color: #ebebeb;
  border-radius: 5px;
  padding: 12rpx 28rpx 18rpx 28rpx;
  font-size: 32rpx;
  color: #b9b9b9;
}

.continuationTypeCon view {
  height: 54rpx;
  line-height: 54rpx;
}

.continuationTypeCon view>text:nth-child(1) {
  display: inline-block;
  width: 204rpx;
}
@import "../../../template/prompt/prompt.wxss";

.button {
  padding: 42rpx 0 120rpx 0;
}

.button button {
  width: 282rpx;
  height: 96rpx;
  background-color: #3cb4ff;
  color: white;
}

.classTime picker {
  width: 220rpx;
}

.position {
  margin: 18rpx 0 40rpx 0;
}

radio-group {
  height: 80rpx;
  margin-top: 10rpx;
  line-height: 80rpx;
}

radio-group label {
  height: 100%;
  display: inline-block;
  width: 50%;
  text-align: center;
}

radio-group radio {
  vertical-align: top;
}

.otherTime {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.otherTime .otherDay {
  position: relative;
  width: 242rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ebebeb;
  border-radius: 5px 0 0 5px;
  margin-right: 2rpx;
}

.otherTime .otherDay picker {
  width: 100%;
  height: 100%;
  padding-left: 28rpx;
  box-sizing: border-box;
  color: #333;
}

.otherTime .otherHouer {
  position: relative;
  width: 382rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ebebeb;
  border-radius: 0 5px 5px 0;
  color: #333333;
  font-size: 32rpx;
}

.otherTime .otherHouer picker {
  width: 128rpx;
  height: 100%;
}

.otherTime .otherHouer picker:nth-of-type(1) {
  text-align: right;
  padding-right: 14rpx;
  box-sizing: border-box;
}

.otherTime .otherHouer picker:nth-of-type(2) {
  padding-left: 14rpx;
  box-sizing: border-box;
}
.otherTime .add {
  padding-left: 12rpx;
  box-sizing: border-box;
}
.otherTime .add image {
  width: 40rpx;
  height: 40rpx;
  display: block;
}
.otherTime .add text{
  color: #3cb4ff;
  font-size: 24rpx;
    display: block;
} 
.delTime .add text{
  color: #fd6751;
}
